[Unit]
Description=OpenRouter Pricing Tracker
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pricing-tracker
Group=pricing-tracker
WorkingDirectory=/opt/pricing-tracker
EnvironmentFile=/opt/pricing-tracker/.env
ExecStart=/opt/pricing-tracker/.venv/bin/python -m app.main --once
Restart=on-failure
RestartSec=10

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/pricing-tracker/logs

# Resource limits
MemoryLimit=1G
CPUQuota=50%

[Install]
WantedBy=multi-user.target
